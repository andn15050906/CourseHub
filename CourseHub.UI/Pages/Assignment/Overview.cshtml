@page
@model CourseHub.UI.Pages.Assignment.ReviewModel
@{
    string name = "Assignment";
    string time = "30 seconds";
    string submission1Time = DateTime.Now.ToString();
    string submission2Time = DateTime.Now.ToString();


}

<link rel="stylesheet" href="~/css/Assignment/assignment.css" />



    <div id="page-content" class="row">
        <div id="region-main-box" class="col-12">
            <section id="region-main">
                <div class="card">
                    <div class="card-body">
                        <span class="notifications" id="user-notifications"></span>
                        <div role="main">
                            <span id="maincontent"></span>
                            <h2>@name</h2>
                            <div class="box quizinfo py-3">
                                <p>Time limit: @time</p>
                                <!--<p>Grading method: Highest grade</p>-->
                            </div>
                            <h3>Summary of your previous attempts</h3>
                            <table class="generaltable quizattemptsummary">
                                <thead>
                                    <tr>
                                    <th class="header c0" style="text-align:center;" scope="col">Attempt</th>
                                    <th class="header c1" style="text-align:left;" scope="col">State</th>
                                    <th class="header c2" style="text-align:center;" scope="col">Marks / 50.00</th>
                                    <th class="header c3" style="text-align:center;" scope="col">Grade / 10.00</th>
                                    <th class="header c4 lastcol" style="text-align:center;" scope="col">Review</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="bestrow">
                                        <td class="cell c0" style="text-align:center;">1</td>
                                        <td class="cell c1" style="text-align:left;">Finished<span class="statedetails">Submitted at @submission1Time</span></td>
                                        <td class="cell c2" style="text-align:center;">7.00</td>
                                        <td class="cell c3" style="text-align:center;">1.40</td>
                                        <td class="cell c4 lastcol" style="text-align:center;">
                                            <a title="Review your responses to this attempt" href="https://cmshn.fpt.edu.vn/mod/quiz/review.php?attempt=534985&amp;cmid=142960">Review</a>
                                        </td>
                                    </tr>
                                    <tr class="lastrow">
                                        <td class="cell c0" style="text-align:center;">2</td>
                                        <td class="cell c1" style="text-align:left;">Finished<span class="statedetails">Submitted at @submission2Time</span></td>
                                        <td class="cell c2" style="text-align:center;">0.00</td>
                                        <td class="cell c3" style="text-align:center;">0.00</td>
                                        <td class="cell c4 lastcol" style="text-align:center;">
                                            <a title="Review your responses to this attempt" href="https://cmshn.fpt.edu.vn/mod/quiz/review.php?attempt=550447&amp;cmid=142960">Review</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div id="feedback" class="box generalbox py-3">
                                <h3>Highest grade: 1.40 / 10.00.</h3>
                            </div>
                            <div class="box quizattempt py-3">
                                <div class="singlebutton quizstartbuttondiv">
                                    <form method="post" action="https://cmshn.fpt.edu.vn/mod/quiz/startattempt.php">
                                        <input type="hidden" name="cmid" value="142960">
                                        <input type="hidden" name="sesskey" value="99h8FVnow2">
                                        <button type="submit" class="btn btn-secondary" id="single_button651581f3b054118" title="">Attempt quiz</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="m-t-2 m-b-1 activity-navigation">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="pull-left">
                                        <a href="https://cmshn.fpt.edu.vn/mod/quiz/view.php?id=142377&amp;forceview=1" id="prev-activity-link" class="btn btn-link" title="@name">◄ @name</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>