            <div id="page-content" class="row">
                <div id="region-main-box" class="col-12">
                    <section id="region-main" class="has-blocks mb-3">
                        <div class="card">
                            <div class="card-body">
                                <span class="notifications" id="user-notifications"></span>
                                <div role="main">
                                    <form action=""
                                        method="post" enctype="multipart/form-data" accept-charset="utf-8"
                                        id="responseform">
                                        <div>
                                            <div id="q1" class="que multichoice deferredfeedback notyetanswered">
                                                <div class="info">
                                                    <h3 class="no">Question <span class="qno">1</span></h3>
                                                </div>
                                                <div class="content">
                                                    <div class="formulation clearfix">
                                                        <h4 class="accesshide">Question text</h4><input type="hidden"
                                                            name="q990832:1_:sequencecheck" value="1" />
                                                        <div class="qtext">An employee at the local ice cream parlor
                                                            asks three customers if they like chocolate ice cream. What
                                                            is the population?</div>
                                                        <div class="ablock">
                                                            <div class="prompt">Select one:</div>
                                                            <div class="answer">
                                                                <div class="r0"><input type="radio"
                                                                        name="q990832:1_answer" value="0"
                                                                        id="q990832:1_answer0" /><label
                                                                        for="q990832:1_answer0" class="m-l-1"><span
                                                                            class="answernumber">a. </span>all
                                                                        custormers</label> </div>
                                                                <div class="r1"><input type="radio"
                                                                        name="q990832:1_answer" value="1"
                                                                        id="q990832:1_answer1" /><label
                                                                        for="q990832:1_answer1" class="m-l-1"><span
                                                                            class="answernumber">b. </span>three
                                                                        selected custermers</label> </div>
                                                                <div class="r0"><input type="radio"
                                                                        name="q990832:1_answer" value="2"
                                                                        id="q990832:1_answer2" /><label
                                                                        for="q990832:1_answer2" class="m-l-1"><span
                                                                            class="answernumber">c. </span>all men
                                                                        custormers</label> </div>
                                                                <div class="r1"><input type="radio"
                                                                        name="q990832:1_answer" value="3"
                                                                        id="q990832:1_answer3" /><label
                                                                        for="q990832:1_answer3" class="m-l-1"><span
                                                                            class="answernumber">d. </span>all women
                                                                        custormers</label> </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section data-region="blocks-column" class="d-print-none">
                        <aside id="block-region-side-pre" class="block-region" data-blockregion="side-pre" data-droptarget="1">
                            <section id="mod_quiz_navblock" class=" block block__fake  card mb-3" role="navigation" data-block="_fake" aria-labelledby="instance-0-header">
                                <div class="card-body p-3">
                                    <div class="card-text content mt-3">
                                        <div class="qn_buttons clearfix multipages">
                                            @for (int i = 0; i < Model.Questions.Count; i++)
                                            {
                                                <button class="qnbutton notyetanswered free btn btn-secondary thispage"
                                                    id="@("quiznavbutton" + i)" title="Not yet answered">
                                                    @(i + 1)
                                                </button>
                                            }
                                        </div>
                                        <div class="othernav">
                                            <a class="endtestlink"
                                                href="#">Finish attempt ...</a>
                                            <div id="quiz-timer" role="timer" aria-atomic="true" aria-relevant="text">
