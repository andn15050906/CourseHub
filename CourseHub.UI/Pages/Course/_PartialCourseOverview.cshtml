@using CourseHub.Core.Helpers.Business;
@using CourseHub.Core.Models.Course.CourseModels;
@using CourseHub.UI.Helpers.Utils;

@model CourseOverviewModel


<div class="col-md-3 col-sm-6 col-xs-12 form-group">
		<a href="@UIHelper.GetCourseDetailPage(Model.Id)" class="course-box-slider pop" data-original-title="" title="">
			@if (Model.Discount > 0 && Model.DiscountExpiry > DateTime.UtcNow)
			{
				<span class="sale-off">-@(Model.Discount * 100)%</span>
			}
		<div class="img-course">
			<img class="img-responsive" src="@Model.ThumbUrl" alt="thumb" loading="lazy"></div>
		<div class="content-course">
		<h3 class="title-course">
			<span>@Model.Title</span>
		</h3>
		<div class="name-gv">
			<b>@Model.Creator.FullName</b>
			<div class="rate-combo">
				<p>
					<span class="star-rate">
						<i class="fa fa-star co-or" aria-hidden="true"></i>
						<i class="fa fa-star co-or" aria-hidden="true"></i>
						<i class="fa fa-star co-or" aria-hidden="true"></i>
						<i class="fa fa-star co-or" aria-hidden="true"></i>
						<i class="fa fa-star co-or" aria-hidden="true"></i>  (@Model.RatingCount)        </span>
				</p>
			</div>
		</div>
		</div>
		<div class="price-course" style="clear: both; top: -40px;">
			@if (CourseBusinessHelper.IsOnDiscount(Model.Discount, Model.DiscountExpiry))
			{
				<span class="price-b">@Model.Price<sup>đ</sup></span>
				<span class="price-a">@CourseBusinessHelper.GetPostDiscount(Model.Price, Model.Discount, Model.DiscountExpiry)<sup>đ</sup></span>
			}
			else
			{
				<span class="price-a">@Model.Price<sup>đ</sup></span>
			}
		</div>
	</a>
</div>